                  if (name === "viewof shuffle") return Inspector.into("#saliencyShuffle")();
                  if (name === "color") return Inspector.into("#saliencyColor")();
                  if (name === "size") return Inspector.into("#saliencySize")();
                  if (name === "shape") return Inspector.into("#saliencyShape")();
                  if (name === "opacity") return Inspector.into("#saliencyOpacity")();
                  if (name === "angle") return Inspector.into("#saliencyAngle")();
